<!-- Header -->
<div class="header">
  <h2>DV Trombinoscope</h2>
  <h1>Reconnaissez les tous !</h1>
</div>


<!-- Trombinoscope -->
<div class="trombi-container">
  <div class="trombi">

    <div class="trombi-block">
      <div class="photo-container">
        <%= image_tag("francois.jpeg", id: "colleague-photo", class: "photo") %>
        <p id="job"> Product Manager </p>
      </div>
      <div class="sentence-container">
        <h3>La phrase</h3>
        <p id="colleague-sentence">"Je te cache pas qu'il y a encore un peu de travail"</p>
        <h4 id="compteur"> <span id="number"> 2 </span> <span id="total">/ 21</span></h4>
      </div>
    </div>

    <div class="trombi-block">
      <div class="button">
        <p class=name> Sophie-Laetitia</p>
        <p class=last-name> Roux </p>
      </div>
      <div class="button">
        <p class=name> Morgane</p>
        <p class=last-name> Veaute </p>
      </div>
      <div class="button">
        <p class=name> Marie</p>
        <p class=last-name> Cointe </p>
      </div>
    </div>
  </div>
</div>
